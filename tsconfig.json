{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      // "@animations": [
      //   "animations/index"
      // ],
      // "@animations/*": [
      //   "animations/*"
      // ]
    }
  },
  "include": [
    "src/**/*",
    "src/expo-blur.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}